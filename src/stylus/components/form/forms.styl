// Forms
// - - - - - - - - - - - - - - - - - - - - - - - - -

fieldset {
  padding: 0;
  margin: 0;
  border: 0;
  // Chrome and Firefox set a `min-width: min-content;` on fieldsets,
  // so we reset that to ensure it behaves more like a standard block element.
  min-width: 0;
}

legend {
  marg(0 0 default 0);
  display: block;
  width: 100%;
  color: config-get("legend-color");
  border: 0;
  border-bottom: 1px solid config-get("legend-border-color");
}

label {
  marg(0 0 default 0);
  display: inline-block;
  max-width: 100%;
  font-weight: bold;
}

#{$all-text-inputs} {
  pad(rem(10) 0 rem(10) 0);
  width: 100%;
  display: block;
  border-radius: 0;
  outline: none;
  box-shadow: none;
  transition: all 0.3s;
}

// Apply same disabled cursor tweak as for inputs
// Some special care is needed because <label>s don't inherit their parent's `cursor`.
//
// Note: Neither radios nor checkboxes can be readonly.
input[type="radio"],
input[type="checkbox"] {
  &[disabled],
  &.disabled,
  fieldset[disabled] {
    cursor: none;
  }
}

// Placeholder
#{$all-text-inputs} {
  @include placeholder {
    color: config-get("placeholder-color");
  }
}
