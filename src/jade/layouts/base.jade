doctype html
block vars
    - var pageclass = ""
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")

        block title
            title Frontend

        link(href="css/growcss.css" rel="stylesheet" type="text/css")
        link(href="css/docs.css" rel="stylesheet" type="text/css")
        link(href="css/prism-okaidia.css" rel="stylesheet" type="text/css")

        <!--[if lt IE 9]>
        <script src="js/growcss-ie8.js"></script>
        <![endif]-->

        block header

    body(class=pageclass)

        include ../partials/nav.jade

        include ../mixin/docs.editor.jade
        include ../mixin/docs.modules.jade
        include ../mixin/docs.header.jade
        include ../mixin/docs.table.jade

        main
            article
                block content

        <!--[if lt IE 9]>
        <script src="js/rem.min.js"></script>
        <![endif]-->

        script(src="js/growcss.js")
        script(src="js/prism.js")

        block footer

        script(src="js/docs.js")
