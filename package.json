{
  "name": "growcss",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "              lerna exec sort-package-json && NODE_ENV=production lerna run build --parallel",
    "changelog": "          lerna-changelog",
    "precommit": "          lint-staged",
    "delete": "             yarn run delete:modules && yarn run delete:build",
    "delete:build": "       rm -rf src/*/*/dist",
    "delete:modules": "     rm -rf node_modules src/**/**/**/node_modules",
    "lint": "               eslint --print-config .eslintrc | eslint-config-prettier-check && eslint '**/*.js'",
    "lint:fix": "           eslint --fix '**/*.js'",
    "storybook": "          NODE_ENV=production start-storybook -p 6006",
    "storybook-build": "    NODE_ENV=production build-storybook",
    "test": "               NODE_ENV=test jest",
    "test:watch": "         yarn run test --watch",
    "test:ci": "            yarn run test --coverage -- --runInBand",
    "test:coverage": "      yarn run test --coverage",
    "typecheck": "          flow check"
  },
  "dependencies": {
    "airbnb-prop-types": "^2.8.1",
    "axe-core": "^2.6.1",
    "babel-core": "^6.26.0",
    "classnames": "^2.2.5",
    "polished": "^1.9.0",
    "preact": "^8.2.7",
    "preact-compat": "^3.18.0",
    "prop-types": "^15.6.0",
    "prop-types-extra": "^1.0.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^3.1.5",
    "styled-theming": "^2.2.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.11",
    "@storybook/addon-info": "^3.3.11",
    "@storybook/addon-links": "^3.3.11",
    "@storybook/addon-options": "^3.3.11",
    "@storybook/addon-storyshots": "^3.3.11",
    "@storybook/addons": "^3.3.11",
    "@storybook/react": "^3.3.11",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.1.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-polished": "^1.1.0",
    "babel-plugin-react-flow-props-to-prop-types": "^0.15.0",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-app": "^3.1.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-compat": "^2.2.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-flowtype-errors": "^3.3.7",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.6.1",
    "flow": "^0.2.3",
    "flow-bin": "^0.64.0",
    "husky": "^0.14.3",
    "istanbul-reports": "^1.1.3",
    "jest": "^22.1.4",
    "jest-enzyme": "^4.1.1",
    "jest-styled-components": "^4.11.0-1",
    "jsdom": "^11.6.2",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.8.1",
    "react-deprecate": "^0.1.0",
    "react-test-renderer": "^16.2.0",
    "rollup": "^0.55.3",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^3.0.0",
    "rollup-plugin-visualizer": "^0.3.1",
    "sort-package-json": "^1.7.1",
    "storybook-addon-jsx": "^5.3.0",
    "storybook-readme": "^3.2.0"
  },
  "engines": {
    "node": "^9.3.0",
    "npm": "^5",
    "yarn": ""
  },
  "jest": {
    "setupFiles": [
      "./build/Tests/JsdomSetup.js",
      "./build/Tests/EnzymeSetup.js",
      "./build/Tests/A11ySetup.js"
    ],
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "lint-staged": {
    "*.{js, jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "src/behaviors/*",
    "src/elements/*",
    "src/utils/*"
  ]
}
