{
  "name": "growcss",
  "version": "0.0.1",
  "description": "GrowCss is a simple, flexible and extensible modular frontend framework.",
  "author": {
    "name": "Daniel Bannert",
    "email": "d.bannert@anolilab.de"
  },
  "homepage": "http://growcss.de",
  "repository": {
    "type": "git",
    "url": "https://github.com/growcss/growcss.git"
  },
  "scripts": {
    "delete": "             yarn run delete:modules && yarn run delete:build",
    "delete:modules": "     rm -rf node_modules **/node_modules",
    "delete:build": "       rm -rf src/*/*/dist",
    "precommit": "          lint-staged",
    "storybook": "          start-storybook -p 6006",
    "storybook-build": "    build-storybook",
    "test": "               yarn run test:jest",
    "test:ci": "            yarn run test:jest -- --runInBand",
    "test:jest": "          jest --coverage",
    "typecheck": "          flow check",
    "lint": "               eslint --print-config .eslintrc | eslint-config-prettier-check && eslint '**/*.js'"
  },
  "bugs": {
    "url": "https://github.com/growcss/growcss/issues"
  },
  "license": "MIT",
  "ignore": [
    "/.*",
    "CODE_OF_CONDUCT.md"
  ],
  "keywords": [
    "css",
    "js",
    "mobile-first",
    "responsive",
    "framework",
    "web",
    "front-end",
    "development",
    "build",
    "behavior",
    "components",
    "preact",
    "react"
  ],
  "engines": {
    "node": "^9.3.0"
  },
  "bolt": {
    "version": ">=0.17.0",
    "workspaces": [
      "packages/behaviors/*",
      "packages/components/*"
    ],
    "releases": {
      "baseCommitUrl": "https://github.com/growcss/growcss/commits"
    }
  },
  "peerDependencies": {
    "preact": "^8.x",
    "preact-compat": "^3.x",
    "react": ">= 15.3.0 < 16 || 16.x",
    "react-dom": ">= 15.3.0 < 16 || 16.x"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.1",
    "@storybook/addon-info": "^3.3.1",
    "@storybook/addon-links": "^3.3.1",
    "@storybook/addons": "^3.3.1",
    "@storybook/react": "^3.3.1",
    "autoprefixer": "^7.0.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^22.0.4",
    "babel-plugin-polished": "^1.1.0",
    "babel-plugin-react-flow-props-to-prop-types": "^0.15.0",
    "babel-plugin-styled-components": "^1.4.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "bolt": "^0.18.2",
    "copy-pkg": "^1.0.0",
    "copy-webpack-plugin": "^4.3.1",
    "css-color-names": "^0.0.4",
    "doctrine": "^2.0.2",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-compat": "^2.1.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "jest": "^22.0.3",
    "jest-enzyme": "^4.0.1",
    "jest-styled-components": "^4.9.0",
    "lint-staged": "^6.0.0",
    "preact": "^8.2.5",
    "preact-compat": "^3.17.0",
    "prettier": "^1.9.2",
    "prettier-eslint": "^8.6.0",
    "raf": "^3.4.0",
    "react": "^16.0.0",
    "react-deprecate": "^0.1.0",
    "react-dom": "^16.2.0",
    "resolve": "^1.3.3",
    "semver": "^5.4.1",
    "storybook-addon-jsx": "^5.1.0",
    "storybook-readme": "^3.1.1"
  },
  "dependencies": {
    "axe-core": "^2.6.0",
    "classnames": "^2.2.5",
    "griz": "^1.3.0",
    "hammerjs": "^2.0.8",
    "polished": "^1.9.0",
    "prop-types": "^15.6.0",
    "prop-types-extra": "^1.0.1",
    "react-lazyload": "^2.3.0",
    "styled-components": "^2.3.2",
    "styled-media-query": "^2.0.1",
    "styled-normalize": "^2.2.1",
    "styled-theming": "^2.2.0"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "./node_modules"
    ],
    "setupFiles": [
      "./__test-setups__/enzyme-setup.js",
      "./__test-setups__/styled-components-setup.js",
      "./__test-setups__/a11y-setup.js"
    ],
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js"
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "git add"
    ]
  }
}
